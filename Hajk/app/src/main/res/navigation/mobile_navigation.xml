<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_notes">

    <fragment
        android:id="@+id/navigation_navigation"
        android:name="com.example.hajk.ui.navigation.NavigationFragment"
        android:label="@string/title_navigation"
        tools:layout="@layout/activity_note" />

    <fragment
        android:id="@+id/navigation_notes"
        android:name="com.example.hajk.ui.notes.NotesFragment"
        android:label="@string/title_notes"
        tools:layout="@layout/fragment_navigation" />

    <fragment
        android:id="@+id/navigation_utilities"
        android:name="com.example.hajk.ui.utilities.UtilitiesFragment"
        android:label="@string/title_utilities"
        tools:layout="@layout/fragment_utilities" />
